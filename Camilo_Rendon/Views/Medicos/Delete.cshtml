@model Camilo_Rendon.Models.Medico

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">Eliminar</h1>

<div class="card shadow p-4 bg-light">
    <h3 class="text-center text-secondary">Are you sure you want to delete this?</h3>
    <hr />
    <h4 class="text-secondary">Medico</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.NombreCompleto)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCompleto)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Especialidad)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Especialidad)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CorreoElectronico)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CorreoElectronico)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.HorarioAtencion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.HorarioAtencion)</dd>
    </dl>
</div>

<div class="text-center mt-3">
    <form asp-action="Delete" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="IdMedico" />
        <input type="submit" value="Delete" class="btn btn-danger px-4" />
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this record?");
        }
    </script>
}